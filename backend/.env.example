# Application Configuration
APP_NAME="DevStrategist AI"
APP_VERSION="0.1.0"
DEBUG=false
API_PREFIX="/api/v1"

# Security
SECRET_KEY="your-32-character-secret-key-here-please-change-this"

# Database - Supabase PostgreSQL
SUPABASE_URL="postgresql://user:password@host:5432/database"
SUPABASE_KEY="your-supabase-api-key"

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"
EMBEDDING_MODEL="text-embedding-3-small"

# Redis
REDIS_URL="redis://localhost:6379"

# LangChain
LANGCHAIN_TRACING=true
LANGCHAIN_PROJECT="devstrategist-ai"

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,https://your-frontend-domain.com"
ALLOWED_HOSTS="localhost,127.0.0.1,*.render.com"

# Agent Configuration
AGENT_TIMEOUT_MINUTES=5
MAX_CONCURRENT_AGENTS=4

# File Upload
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# GitHub Integration (Optional)
GITHUB_CLIENT_ID="your-github-oauth-client-id"
GITHUB_CLIENT_SECRET="your-github-oauth-client-secret"